<div class="input-group" id="adv-search">
    {{input value=text placeholder="Search for movies" class="form-control"}}
    <div class="input-group-btn">
        <div class="btn-group" role="group">
            <div class="dropdown dropdown-lg">

              {{#bs-dropdown tagName="div" direction="left" closeOnMenuClick=false }}
                {{#bs-dropdown-toggle}}<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>{{/bs-dropdown-toggle}}

                  {{#bs-dropdown-menu}}
                    <form class="form-horizontal" role="form">
                      <div class="form-group">
                        <label for="contain">Title</label>
                        {{input value=title class="form-control" action=(route-action 'advancedSearchMovies' title director actor_name min_rate max_rate year) on='keyUp'}}
                      </div>
                      <div class="form-group">
                        <label for="contain">Director</label>
                        {{input value=director class="form-control" action=(route-action 'advancedSearchMovies' title director actor_name min_rate max_rate year) on='keyUp'}}
                      </div>
                      <div class="form-group">
                        <label for="contain">Actor</label>
                        {{input value=actor_name class="form-control" action=(route-action 'advancedSearchMovies' title director actor_name min_rate max_rate year) on='keyUp'}}
                      </div>
                      <div class="form-group">
                        <div class="col-md-4">
                          <label for="contain">Year</label>
                          {{input value=year class="form-control" type="number" min="1900" step="1" action=(route-action 'advancedSearchMovies' title director actor_name min_rate max_rate year) on='change'}}
                        </div>
                        <div class="col-md-4">
                          <label for="contain">Rate min</label>
                          {{input value=min_rate class="form-control" type="number" min="0.0" max="10.0" step="0.1" action=(route-action 'advancedSearchMovies' title director actor_name min_rate max_rate year) on='keyUp'}}
                        </div>
                        <div class="col-md-4 nopadding">
                          <label for="contain">Rate max</label>
                          {{input value=max_rate class="form-control" type="number" min="0.0" max="10.0" step="0.1" action=(route-action 'advancedSearchMovies' title director actor_name min_rate max_rate year) on='keyUp'}}
                        </div>
                      </div>
                    </form>
                {{/bs-dropdown-menu}}
              {{/bs-dropdown}}
            </div>
            <button type="button" class="btn btn-primary" {{action (route-action 'simpleSearchMovies' text)}}><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
        </div>


    </div>
</div>
